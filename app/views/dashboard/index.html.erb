<%= render partial: './navbar' %>
<section class="spacer">

</section>

<div class="col-6 mx-auto">
  <div class="center mb1">

    <%= form_tag dashboard_path, method: :get do %>
      <%= text_field_tag "park", nil, placeholder: "Search Images by Park Name", class: "mb1 search-text"%>
    <% end %>
    <%= link_to "Random Images", dashboard_path, class: "col-9 search-text text-decoration-none black" %>
  </div>
</div>

<section class="m0 images col-6 mx-auto">
  <% @images.each do |image| %>
    <div class="mb1 p1 rounded image bg-soft-white">
      <h2 class="m0 center block"><%=link_to image.park, image.park_url, target: :_blank, class: "text-decoration-none black" %></h2>
      <div class="gift-wrapper">
        <%= image_tag "#{image.url}", class: "mx-auto block med-image rounded" %>
        <div class="centered">
          <h2><%= link_to fa_icon("dollar", class: "big-icon center"), new_charge_path(park: "#{image.park}"), class: "text-decoration-none black", id: "give" %></h2>
        </div>
      </div>
      <p class="m1 center block"><%= image.caption %></p>
    </div>
  <% end %>
</section>
